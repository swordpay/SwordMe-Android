<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/payOrRequestLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/transparent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_23"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_23"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/topNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/swordRequestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_request_title_fon"
            android:elegantTextHeight="true"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="3dp"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/euro_symbol_send"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_12" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/swordRequestCoinIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/swordRequestMoneyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:autoSizeMaxTextSize="@dimen/textSize_25"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:elegantTextHeight="true"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_24"
                app:autoSizeTextType="uniform" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/channelInfoContainer"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/channelAvatarFrame"
                android:layout_width="30dp"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_height="30dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/channelAvatarColor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:riv_border_width="0.3dp"
                                android:src="@drawable/yellow_oval_icon"
                                app:riv_border_color="@color/dark_hint"
                                android:scaleType="centerCrop"
                                app:riv_oval="true" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/avatarFirstCharacter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_bold"
                                android:singleLine="true"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/textSize_20" />


            </FrameLayout>


            <TextView
                android:id="@+id/channelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:layout_gravity="center_vertical"
                android:autoSizeMaxTextSize="@dimen/textSize_16"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_16"
                app:autoSizeTextType="uniform" />

        </androidx.appcompat.widget.LinearLayoutCompat>

<!--        <androidx.appcompat.widget.AppCompatTextView-->
<!--            android:id="@+id/swordRequestMessage"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="@dimen/dp_10"-->
<!--            android:fontFamily="@font/poppins_regular"-->
<!--            android:lineSpacingExtra="3dp"-->
<!--            android:maxLines="1"-->
<!--            android:singleLine="true"-->
<!--            android:textAlignment="textStart"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/textSize_15" />-->

<!--        <androidx.appcompat.widget.LinearLayoutCompat-->
<!--            android:id="@+id/swordRequestNotLine"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.3dp"-->
<!--            android:layout_marginTop="@dimen/dp_10"-->
<!--            android:layout_marginBottom="@dimen/dp_10"-->
<!--            android:background="@color/white" />-->

        <LinearLayout
            android:id="@+id/acceptAndDeclineBtnLayout"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/declineBtn"
                android:text="@string/decline"
                android:maxLines="1"
                android:background="@drawable/reject_btn_fon"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/dark_text_color"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_10"
                android:textSize="@dimen/textSize_14"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"/>
            <TextView
                android:id="@+id/acceptBtn"
                android:text="@string/accept"
                android:maxLines="1"
                android:background="@drawable/accept_btn_fon_border"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/dark_text_color"
                android:layout_weight="1"
                android:textSize="@dimen/textSize_14"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/swordRequestNot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lineHeight="@dimen/dp_17"
            android:autoLink="all"
            android:layout_marginBottom="@dimen/dp_10"
            android:fontFamily="@font/poppins_regular"
            android:linksClickable="true"
            android:textColor="@color/white"
            android:textColorLink="@color/appBlue"
            android:textSize="@dimen/textSize_15" />




    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>



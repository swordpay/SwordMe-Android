<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_height="@dimen/topBarSize">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/onBackBtn"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:padding="@dimen/displayMarginSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_back_icon"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pagerIndicatorLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toEndOf="@id/onBackBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/pagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/displayMarginSize"
                app:dotsColor="#DADADA"
                app:dotsCornerRadius="100dp"
                app:dotsSize="10dp"
                app:dotsClickable="false"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="7"
                app:progressMode="false"
                app:selectedDotColor="@color/appBlue" />

        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
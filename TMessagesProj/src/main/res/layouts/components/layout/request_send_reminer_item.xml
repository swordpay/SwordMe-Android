<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/displayMarginSize"
        android:paddingTop="20dp"
        android:paddingEnd="@dimen/displayMarginSize">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginEnd="10dp"
            android:text="@string/no_payment_yet"
            android:textColor="@color/dark_text_color"
            android:textSize="@dimen/textFieldTitleSize"
            app:layout_constraintBottom_toBottomOf="@+id/sendRemindBtn"
            app:layout_constraintEnd_toStartOf="@+id/sendRemindBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sendRemindBtn" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sendRemindBtn"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/dashLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_send_reminde_icon" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/dashLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dash_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
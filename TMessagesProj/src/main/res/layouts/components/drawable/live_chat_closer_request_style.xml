<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="@color/errorColor"
                android:endColor="@color/errorColor"
                android:gradientRadius="360"
                android:startColor="@color/errorColor"
                android:type="linear" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#EFF6FD"
                android:endColor="#F2E2FA"
                android:gradientRadius="360"
                android:startColor="#F3FFFA"
                android:type="linear" />
            <corners android:radius="9dp"/>
        </shape>

    </item>

</layer-list>
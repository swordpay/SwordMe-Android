<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.telegram.sword.app.home.tabs.cryptoAccount.coinDetails.view.CoinDetails">


    <include
        android:id="@+id/topBar"
        layout="@layout/activity_top_bar" />



    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_50">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coinName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/displayMarginSize"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/displayMarginSize"
                android:elegantTextHeight="true"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/hint"
                android:textSize="@dimen/textSize_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/displayMarginSize"
                android:layout_marginEnd="@dimen/displayMarginSize"
                android:elegantTextHeight="true"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="@dimen/textSize_48"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_text_color"
                android:textSize="@dimen/textSize_48"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coinName" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/buttonsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_13"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amount">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingTop="@dimen/dp_13"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/buy"
                         android:visibility="gone"
                        android:layout_marginStart="@dimen/displayMarginSize"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:background="@drawable/active_btn"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:visibility="gone" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/buy"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_20" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/sell"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/displayMarginSize"
                        android:layout_marginBottom="@dimen/dp_22"
                        android:background="@drawable/active_btn"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:visibility="gone" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elegantTextHeight="true"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/sell"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_20" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/line_1"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonsLayout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/totalReturnFromTimeLayout"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/displayMarginSize"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/displayMarginSize"
                android:paddingBottom="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line_1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalReturnFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/total_return"
                    android:textColor="@color/errorColor"
                    android:textSize="@dimen/textSize_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalReturnTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/poppins_medium"
                    android:singleLine="true"
                    android:text="@string/past_24_hours"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/textSize_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/infoBtn"
                    app:layout_constraintStart_toEndOf="@id/totalReturnFromTime"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/infoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/info_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.db.williamchart.view.LineChartView
                app:chart_axis="none"
                app:chart_gridEffect="dotted"
                android:paddingTop="@dimen/dp_5"

                android:paddingBottom="@dimen/dp_5"
                app:chart_lineColor="@color/dark_text_color"
                app:chart_lineThickness="@dimen/dp_2"
                app:chart_smoothLine="true"
                android:layout_marginTop="@dimen/displayMarginSize"
                android:layout_marginBottom="@dimen/displayMarginSize"
                android:id="@+id/statisticsChart"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalReturnFromTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                 />

            <FrameLayout
                android:focusable="true"
                android:clickable="true"
                android:contextClickable="true"
                android:longClickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/statisticsChart"
                app:layout_constraintEnd_toEndOf="@+id/statisticsChart"
                app:layout_constraintStart_toStartOf="@+id/statisticsChart"
                app:layout_constraintTop_toTopOf="@+id/statisticsChart"
                android:layout_width="0dp"
                android:layout_height="0dp">

                <ProgressBar
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:id="@+id/chartLoading"
                    android:indeterminateTint="@color/dark_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </FrameLayout>




            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/chartRangeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/displayMarginSize"
                android:weightSum="6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statisticsChart">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/d1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/black_20_dp_radius"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="24h"
                    android:textColor="@color/white"
                    android:textSize="@dimen/middle_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/w1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/_1w"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/middle_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/m1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/_1m"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/middle_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/m3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/_3m"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/middle_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/m6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/_6m"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/middle_text_size" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/y1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/_1y"
                    android:textColor="@color/dark_text_color"
                    android:textSize="@dimen/middle_text_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
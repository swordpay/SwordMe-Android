<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.telegram.sword.app.bottomSheet.cashOrCrypto.CashOrCrypto">
    <include
        android:id="@+id/topBar"
        layout="@layout/bottom_sheet_top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#A6A6AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/topLine">


        <include
            android:id="@+id/cash"
            layout="@layout/name_and_right_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemSize"
            android:layout_marginTop="@dimen/dp_40" />

        <include
            android:id="@+id/crypto"
            layout="@layout/name_and_right_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemSize"
            />

        <include layout="@layout/gray_line_2dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/displayMarginSize"
            android:layout_marginBottom="10dp"
            android:gravity="end"
            android:weightSum="2">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/payOrRequestMessageLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@drawable/live_chat_my_request_style"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingTop="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_7"
                >


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:text="@string/symbol_sent"
                    android:elegantTextHeight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:background="@drawable/my_request_title_fon"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_12" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/coinIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/transparent"
                        android:elevation="2dp"
                        android:scaleType="centerCrop"
                        app:riv_oval="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/moneyPrice"
                        android:text="â‚¬ 225"
                        android:elegantTextHeight="true"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_24" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/myRequestMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="dvkhbsdfjdsjkvbjsdsvbjdvbjdsbv"
                    android:lineSpacingExtra="3dp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_15" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/notLine"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_7"
                    android:background="@color/white"
                    android:layout_height="0.3dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/not"
                    android:text="fjvbfjbnfgfbfbf"
                    android:textColorLink="@color/appBlue"
                    android:linksClickable="true"
                    android:autoLink="all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_14" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="end"
                    android:layout_marginTop="-3dp"
                    android:text="11:45"
                    android:alpha="0.3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_11"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>


</layout>
